{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "npm",
      "skipFiles": ["backend/<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/backend",
      "preLaunchTask": "Launch and migrate database",
      "outputCapture": "std"
    },
    {
      "name": "Backend-External",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "npm",
      "skipFiles": ["backend-external/<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/backend-external",
      "outputCapture": "std"
    },
    {
      "name": "DocGenService",
      "request": "launch",
      "runtimeArgs": ["run-script", "dev"],
      "runtimeExecutable": "npm",
      "skipFiles": ["doc-gen-service/<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/doc-gen-service",
      "outputCapture": "std"
    },
    {
      "name": "Frontend",
      "request": "launch",
      "runtimeArgs": ["run-script", "serve"],
      "runtimeExecutable": "npm",
      "skipFiles": ["frontend/<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "Launch Edge",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:8081",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ],
  "compounds": [
    {
      "name": "Launch All",
      "configurations": [
        "Backend",
        "Backend-External",
        "Frontend",
        "Launch Edge",
        "DocGenService"
      ],
      "stopAll": true
    }
  ]
}
